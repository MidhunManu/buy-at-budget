<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Login res</title>
</head>
<body>
  <div class="alert alert-danger" role="alert" id="red_alert">
    Wrong email or passcode
  </div>
  <div class="alert alert-success" role="alert" id="green_alert">
    Welcome
  </div>
  <script>
    let red_alert_tag = document.getElementById("red_alert");
    let green_alert_tag = document.getElementById("green_alert");

    fetch("http://localhost:8080/login_res")
    .then(res => {return res.json()})
    .then(
      data => {
        console.log(data);
        if(data.message == "failure") {
          green_alert_tag.style.display = "none"
          setTimeout(
            function() {
              red_alert_tag.style.display = "none"
            },3000
          );
        }
        else if(data.message == "success") {
          red_alert_tag.style.display = "none"
          setTimeout(
            function() {
              green_alert_tag.style.display = "none"
            },
            3000
          );
        }
      }
    )
  </script>
</body>
</html>